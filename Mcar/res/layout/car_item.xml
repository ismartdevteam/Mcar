<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="@dimen/car_item_pad_dim"
        android:layout_height="@dimen/car_item_pad_dim" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/car_item_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/car_holder" />

        <mn.ismartdev.text.Regular
            android:id="@+id/car_item_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="3dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <mn.ismartdev.text.Bold
            android:id="@+id/car_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"
            android:singleLine="true"
            android:textColor="@color/car_title_color"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <mn.ismartdev.text.Regular
                android:id="@+id/car_item_engine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:singleLine="true"
                android:textColor="@color/mainColor"
                android:textSize="10sp"
      />

            <mn.ismartdev.text.Regular
                android:id="@+id/car_item_roller_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:singleLine="true"
                android:textColor="@color/mainColor"
                android:textSize="10sp"
          />

            <mn.ismartdev.text.Regular
                android:id="@+id/car_item_fuel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:singleLine="true"
                android:textColor="@color/car_fuel_color"
                android:textSize="10sp" />
        </LinearLayout>

        <mn.ismartdev.text.Light
            android:id="@+id/car_item_distance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"
            android:singleLine="true"
            android:textColor="@color/car_distance_color"
            android:textSize="14sp" />

        <mn.ismartdev.text.Bold
            android:id="@+id/car_item_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>