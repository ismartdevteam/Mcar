<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
            android:background="@drawable/card_view" >


        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/ad_item_image"
            android:layout_width="@dimen/ad_item_dim"
            android:layout_height="@dimen/ad_item_dim"
            android:src="@drawable/car_holder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ad_item_dim"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ad_item_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/car_title_color" />

            <TextView
                android:id="@+id/ad_item_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/mainColor" />

            <TextView
                android:id="@+id/ad_item_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>


</LinearLayout>